	      <fileset dir="build" defaultexcludes="no" />


		  <fileset refid="arx.lib.jars" />

	      <zipfileset src="build/extLibs/lib.jar" excludes="META-INF/*.RSA,META-INF/*.SF,META-INF/*.DSA" />

	      <manifest>
